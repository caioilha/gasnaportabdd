<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/heightCard"
    android:orientation="vertical">

    <!-- A CardView that contains a Images and texts -->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/marginLados"
        android:layout_marginRight="@dimen/marginLados"
        android:layout_marginTop="@dimen/marginTop"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="5dp">

        <View
            android:id="@+id/leftLine"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#ffc801" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="14dp">

            <ImageView
                android:id="@+id/favoritoheart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="6dp">

                <TextView
                    android:id="@+id/supplierNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    android:textSize="@dimen/titleSize" />


                <TextView
                    android:id="@+id/supplierAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLength="53"
                    android:text="Av. Getúlio Vargas, nº 1300"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/enderecoSize" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|right"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lista_preco"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_gravity="left"
                        android:fontFamily="@font/roboto_bold"
                        android:text="R$23"
                        android:textColor="#3a455c"
                        android:textSize="@dimen/precoSize" />

                    <TextView
                        android:id="@+id/lista_precoCents"
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:paddingTop="4dp"
                        android:layout_gravity="right"
                        android:fontFamily="@font/roboto_bold"
                        android:text=",00"
                        android:textColor="#3a455c"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lista_distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="10min"
                    android:textColor="#999999"
                    android:textSize="@dimen/distanciaSize" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>



